<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/screen_bg</item>
    </style>

    <style name="AppTheme.Button.Transparent" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#4DDAFBF5</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Button.Brown" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#FF3F383B</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="AppTheme.EditText.Big" parent="Widget.AppCompat.EditText">
        <item name="android:drawablePadding">@dimen/dp_6</item>
        <item name="android:paddingLeft">@dimen/dp_6</item>
        <item name="android:paddingRight">@dimen/dp_6</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/edit_bg_long</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!--PopupWindow-->
    <style name="Animation.PopupWindow" parent="Animation.AppCompat.DropDownUp">

    </style>

</resources>
