<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_200"
    android:background="@drawable/bg_world"
    android:fitsSystemWindows="true"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    tools:ignore="Overdraw">

    <com.pkmmte.view.CircularImageView
        android:id="@+id/iv_userIcon"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:src="@drawable/user_icon"
        app:border="true"
        app:border_color="#16f5f5f5"
        app:border_width="@dimen/dp_8"
        app:selector="true"
        app:selector_color="#4D000000"
        app:selector_stroke_color="#16f5f5f5"
        app:selector_stroke_width="@dimen/dp_8"
        app:shadow="false" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_userIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/treasure_expert"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_16" />

</RelativeLayout>
